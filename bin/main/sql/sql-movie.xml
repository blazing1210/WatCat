	<!--찜하기 추가-->
	<insert id="insertMovieWish" parameterType="com.watcat.dto.movie.MovieWishDto">
		<![CDATA[
			INSERT INTO
				wishlist(movie_id,user_id)
			VALUES
				(#{movieId},#{userId})
		]]>
	</insert>
	
	<!--찜하기 해제-->
	<delete id="deleteMovieWish" parameterType="com.watcat.dto.movie.MovieWishDto">
		<![CDATA[
			DELETE FROM
				wishlist
			WHERE
				movie_id = #{movieId}
			AND
				user_id = #{userId}
		]]>
	</delete>
</mapper>